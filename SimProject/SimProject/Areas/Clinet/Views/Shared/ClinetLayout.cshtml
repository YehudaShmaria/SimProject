<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - מדור טוכנולוגיה</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        tr {
            text-align: right;
        }

        th {
            text-align: right;
            background-color: antiquewhite;
        }
        h2{
            color:blue;
        }
    </style>
</head>
<body dir="rtl">
    <div style="opacity: 0.8; text-align:right" class=" navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("יציאה", "SignOut", "ClinetHome", new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse text-right">
                <ul class="nav navbar-nav text-right">
                    <li>@Html.ActionLink("דף הבית", "Index", "ClinetHome")</li>
                    <li>@Html.ActionLink("נתוני סימים", "Index", "SimClinet")</li>
                    <li>@Html.ActionLink("נתוני מכשירים", "Index", "DeviceClinet")</li>
                    <li>@Html.ActionLink("שלח לנו הודעה", "SendGmail", "ContactClinet")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if(User.Identity.IsAuthenticated)
        {
        <div style="text-align:left">
            <h2>שלום @User.Identity.Name</h2>
            @Html.ActionLink("התנתק", "SignOut", "ClinetHome")
        </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - מדור טונולוגיה אגף חקירות מודיעין</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
